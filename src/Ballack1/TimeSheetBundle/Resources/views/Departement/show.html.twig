{% extends "BallackTimeSheetBundle::layout.html.twig" %}

{% block main %}
<div class="x_panel">
    <div class="x_title">
        <h2>Departement <small>Show</small></h2>

        <div class="clearfix"></div>
    </div>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ departement.departement }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('departement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('departement_edit', { 'id': departement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul></div>
{% endblock %}
